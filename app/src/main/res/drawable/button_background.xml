<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSelected"/>
            <stroke android:color="#DBB8FF" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSelect"/>
            <stroke android:color="#DBB8FF" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!--&lt;!&ndash;</shape>&ndash;&gt;-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DEB887"/>
            <stroke android:color="#DBB8FF" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="15dp" />
        </shape>
    </item>



</selector>